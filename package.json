{
  "name": "coba-desktop-app",
  "private": true,
  "version": "0.0.0",
  "productName": "coba-app",
  "description": "<your project description>",
  "author": "<author of app>",
  "build": {
    "appId": "coba-electron-app",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "files": [
      "dist/**/*",
      "electron/electron.js",
      "electron/preload.mjs",
      "node_modules/**/*",
      "package.json",
      "backend/"
    ],
    "extraResources": [
      "./database/data.db"
    ],
    "directories": {
      "output": "release",
      "buildResources": "dist"
    }
  },
  "type": "module",
  "main": "electron/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "compile": "electron-webpack",
    "buildn": "yarn build  && yarn electron-build",
    "electron-pack": "build -c.extraMetadata.main=build/Main.js",
    "start": "concurrently \"cross-env BROWSER=none yarn vite\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "electron-builder --win -c.extraMetadata.main=build/electron.js --publish never",
    "preelectron-pack": "npm run build",
    "electron-packe": " electron-builder -c.extraMetadata.main=dist/electron.js",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "install-app-deps electron-build"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron/rebuild": "^3.7.1",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.0.9",
    "better-sqlite3": "^11.8.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "daisyui": "^5.0.0-beta.9",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^3.0.1",
    "electron-webpack": "^2.8.2",
    "formik": "^2.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.0.9",
    "util": "^0.12.5",
    "wait-on": "^8.0.2",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "vite": "^6.1.0",
    "webpack": "^5.97.1"
  }
}
